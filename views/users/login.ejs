<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <main style="display: flex; justify-content: center; margin: 8vw 0; align-items: center; flex-direction: column;">    
        <div class="inner-titulo">
            <h2>Inicia sesión</h2>
        </div>

        <% if (typeof errors !== 'undefined') { %>
            <% if (errors.email) { %>
              <div class="error"><%= errors.email.msg %></div>
            <% } %>
          
            <% if (errors.password) { %>
              <div class="error"><%= errors.password.msg %></div>
            <% } %>
          <% } %>
          

        <form action="/users/login" method="post" class="formulario">
            <div class="form-group textarea-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" placeholder="Ingresa tu correo electrónico" value="<%= old ? old.email : '' %>">
            </div>
            
            <% if (locals.errors?.email) { %>
                <p class="error"><%= locals.errors.email.msg %></p>
            <% } %>

            <div class="form-group textarea-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña">
            </div>
        
            <div class="form-group2" id="remember">
                <div class="inner-check">    
                    <input type="checkbox" name="rememberme" id="rememberme" />
                </div>
                <div class="inner-label">
                    <label for="rememberme">Recordarme</label>
                </div>
            </div>

            <div class="form-group">
                <button class="btn" type="submit">Iniciar sesión</button>
                <button class="btn" type="button" style="margin-top: 7px;" onclick="window.location.href='/users/register'">Registrate</button>
            </div>
        </form>
    </main>
    <script src="../../app.js"></script>
</body>
</html>