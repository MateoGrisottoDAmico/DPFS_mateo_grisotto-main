<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <main style="display: flex; justify-content: center; margin: 8vw 0; align-items: center; flex-direction: column;">    
        <div class="inner-titulo">
            <h2>Registrate</h2>
        </div>

        <form method="post" action="/users/register" class="formulario" enctype="multipart/form-data">

            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" placeholder="Ingresa tu nombre" 
                    value="<%= old?.nombre || '' %>">
                <% if (errors?.nombre) { %>
                    <p class="error"><%= errors.nombre.msg %></p>
                <% } %>
            </div>
        
            <div class="form-group">
                <label for="apellido">Apellido:</label>
                <input type="text" id="apellido" name="apellido" placeholder="Ingresa tu apellido"
                    value="<%= old?.apellido || '' %>">
                <% if (errors?.apellido) { %>
                    <p class="error"><%= errors.apellido.msg %></p>
                <% } %>
            </div>
        
            <div class="form-group">
                <label for="telefono">Teléfono:</label>
                <input type="number" id="telefono" name="telefono" placeholder="Ingresa tu teléfono" 
                    value="<%= old?.telefono || '' %>">
                <% if (errors?.telefono) { %>
                    <p class="error"><%= errors.telefono.msg %></p>
                <% } %>
            </div>
        
            <div class="form-group textarea-group">
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" placeholder="Ingresa tu Email"
                    value="<%= old?.email || '' %>">
                <% if (errors?.email) { %>
                    <p class="error"><%= errors.email.msg %></p>
                <% } %>
            </div>

            <div class="form-group textarea-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Crea una contraseña">
                <% if (errors?.password) { %>
                    <p class="error"><%= errors.password.msg %></p>
                <% } %>
            </div>

            <div class="form-group textarea-group">
                <label for="foto">Foto de perfil:</label>
                <input type="file" id="foto" name="foto" accept="image/*">
                <% if (errors?.foto) { %>
                    <p class="error"><%= errors.foto.msg %></p>
                <% } %>
            </div>
        
            <div class="form-group">
                <button class="btn" type="submit">Enviar</button>
                <button class="btn" type="button" style="margin-top: 7px;" onclick="window.location.href='/users/login'">Iniciar sesión</button>
            </div>
        </form>
    </main>
    <script src="../../app.js"></script>
</body>
</html>
